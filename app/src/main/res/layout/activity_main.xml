<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"

    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ac"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="@string/ac"
                android:textSize="30sp"
                app:backgroundTint="@color/gray_button"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_bracket_open"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="@string/bracket_open"
                android:textSize="30sp"
                app:backgroundTint="@color/gray_button"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_bracket_close"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="@string/bracket_close"
                android:textSize="30sp"
                app:backgroundTint="@color/gray_button"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divider"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="@string/divider"
                android:textSize="30sp"
                app:backgroundTint="@color/button_orange"
                app:cornerRadius="36dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                style="@style/digit_button"
                android:text="@string/button_7"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                android:text="@string/button_8"
                style="@style/digit_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                android:text="@string/button_9"
                style="@style/digit_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiplier"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="@string/button_x"
                android:textSize="30sp"
                app:backgroundTint="@color/button_orange"
                app:cornerRadius="36dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                android:text="@string/button_4"
                style="@style/digit_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                android:text="@string/button_5"
                style="@style/digit_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                android:text="@string/button_6"
                style="@style/digit_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_minus"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="@string/button_minus"
                android:textSize="30sp"
                app:backgroundTint="@color/button_orange"
                app:cornerRadius="36dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                android:text="@string/button_1"
                style="@style/digit_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                android:text="@string/button_2"
                android:textSize="30sp"
                style="@style/digit_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="@string/button_3"
                android:textSize="30sp"
                app:backgroundTint="@color/dark_gray_button"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="@string/button_plus"
                android:textSize="30sp"
                app:backgroundTint="@color/button_orange"
                app:cornerRadius="36dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                android:layout_width="170dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:paddingStart="28dp"
                android:paddingEnd="28dp"
                android:text="@string/button_zero"
                android:textAlignment="textStart"
                android:textSize="30sp"
                app:backgroundTint="@color/dark_gray_button"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_comma"
                android:text="@string/button_comma"
                style="@style/digit_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equal"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="@string/button_equal"
                android:textSize="30sp"
                app:backgroundTint="@color/button_orange"
                app:cornerRadius="36dp" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>